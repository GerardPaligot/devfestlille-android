<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.DevFest" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorSecondary">@color/colorAccent</item>

    <item name="colorOnPrimary">@android:color/white</item>
    <item name="colorOnSecondary">@android:color/white</item>
    <item name="colorSurface">@android:color/white</item>
    <item name="colorOnSurface">@color/colorPrimaryDark</item>

    <item name="colorControlHighlight">@color/colorPrimaryDark</item>

    <item name="android:windowBackground">@color/bgWindow</item>
    <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView</item>
    <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>

    <item name="textAppearanceHeadline5">@style/TextAppearance.DevFest.Headline5</item>
    <item name="textAppearanceHeadline6">@style/TextAppearance.DevFest.Headline6</item>
    <item name="textAppearanceSubtitle1">@style/TextAppearance.DevFest.Subtitle1</item>
  </style>

  <style name="Theme.DevFest.AppBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

  <style name="TextAppearance.DevFest.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
    <item name="fontFamily">@font/open_sans</item>
    <item name="android:fontFamily">@font/open_sans</item>
    <item name="android:textColor">@color/colorPrimaryDark</item>
  </style>

  <style name="TextAppearance.DevFest.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
    <item name="fontFamily">@font/open_sans</item>
    <item name="android:fontFamily">@font/open_sans</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/colorPrimaryDark</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="TextAppearance.DevFest.Subtitle1" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
    <item name="fontFamily">@font/open_sans</item>
  </style>

  <style name="Theme.DevFest.TimeHeaders">
    <item name="android:width">@dimen/session_keyline</item>
    <item name="android:paddingTop">@dimen/time_header_padding_top</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:fontFamily">@font/open_sans</item>
    <item name="hourTextSize">@dimen/time_header_hour_text_size</item>
    <item name="hourMinTextSize">@dimen/time_header_hour_min_text_size</item>
    <item name="meridiemTextSize">@dimen/time_header_meridiem_text_size</item>
  </style>

</resources>